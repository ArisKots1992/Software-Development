<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
 <item android:state_pressed="true" >
  <shape>
  <solid
   android:color="#2678BF" />
  <stroke
   android:width="1dp"
   android:color="#000000" />
  <corners
   android:radius="4dp" />
  <padding
   android:left="10dp"
   android:top="10dp"
   android:right="10dp"
   android:bottom="10dp" />
  </shape>
 </item>
  <item>
  <shape>
  <gradient
   android:startColor="#5DB0E2"
   android:endColor="#3183CA"
   android:angle="270" />
  <stroke
   android:width="1dp"
   android:color="#000000" />
  <corners
   android:radius="4dp" />
  <padding
   android:left="10dp"
   android:top="10dp"
   android:right="10dp"
   android:bottom="10dp" />
 </shape>
 </item>
</selector>